@model DataLayer.sessioncal

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SuggessPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
