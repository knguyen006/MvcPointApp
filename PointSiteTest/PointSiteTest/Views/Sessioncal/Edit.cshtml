            @Html.DropDownList("sessiontypeid", String.Empty)
            @Html.ValidationMessageFor(model => model.sessiontypeid)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sessionnum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sessionnum)
            @Html.ValidationMessageFor(model => model.sessionnum)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sessionamt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sessionamt)
            @Html.ValidationMessageFor(model => model.sessionamt)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sessionpoint)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sessionpoint)
            @Html.ValidationMessageFor(model => model.sessionpoint)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
