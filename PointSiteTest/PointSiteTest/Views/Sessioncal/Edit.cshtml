            @Html.EditorFor(model => model.sessiondate)
            @Html.ValidationMessageFor(model => model.sessiondate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sessiontypeid, "sessiontype")
        </div>
